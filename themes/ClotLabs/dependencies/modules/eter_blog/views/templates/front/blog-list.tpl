{if count($bloglist) > 0}
    <div class="related-blogs blogs">
        <h3>{l s='Latest Blogs' mod='eter_blog'}</h3>
        {foreach from=$bloglist item=blog}
            <a href="{$blog.url}" class="blog">
                <div class="content">
                    <div class="title">
                        <img src="{$blog.banner}" alt="{$blog.name}" title="{$blog.name}">
                    </div>
                    <div class="date">
                        <p class="title">{$blog.name}</p>
                        <p class="created">{$blog.created_at}</p>
                        <p class="details">
                            {$blog.details}
                        </p>
                    </div>
                </div>
            </a>  
        {/foreach}
    </div>
{/if}
