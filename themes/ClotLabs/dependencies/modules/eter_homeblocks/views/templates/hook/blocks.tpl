{if $data}
    <div id="home-blockslider" class="home-blockslider col-sm-12 col-md-12 col-lg-12" >
        <!-- <h1>{l s='Home Blocks' mod='boedo_blockslider'}</h1> -->
        <div class="blockslider owl-carousel owl-theme" >
            {foreach from=$data item=row}
                {if $row.active}
                    <div class="blockslide">
                        <div class="blockcontent">
                            <img src="{$row.image_url}" alt="{$row.title|escape}" class="image">
                            <div class="details">
                                <div class="content-details">
                                    <div class="tap"></div>
                                    <h3 class="title">{$row.title|escape}</h3>
                                    <p class="detail">{$row.details nofilter}</p>
                                </div>
                                {if $row.url_name && $row.url}
                                    <a href="{$row.url}"  itemprop="url">
                                        {$row.url_name}
                                    </a>
                                {/if}
                            </div>
                        </div>
                    </div>
                {/if}
            {/foreach}
        </div>
    </div>
{/if}
