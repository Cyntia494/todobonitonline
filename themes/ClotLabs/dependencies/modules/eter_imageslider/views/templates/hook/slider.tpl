{if $homeslider.slides}
	<div id="slider-with-blocks-1" class="heroSlider royalSlider rsMinW
		rsDefault">
		{foreach from=$homeslider.slides item=slide}
			<div class="rsContent slide4 {if $slide.side == 2}right{else}left{/if}">
				{if $slide.display_mode == "image_only"}
					<a href="{$slide.url}">
				{/if}
					<img src="{$slide.background}" class="hero-image desktop" >
					<img src="{$slide.background_mobile}" class="hero-image mobile" onerror="this.src='{$slide.background}'">
				{if $slide.display_mode == "image_only"}
					</a>
				{/if}
				<div class="bContainer">
				</div>
				{if $slide.display_mode == "animated"}
					<div class="rsABlock slideInfo" data-move-offset="100"
						data-move-effect="left">
						<h1 class="hero-title">{$slide.title nofilter}</h1>
						{if $slide.description}
							<p>{$slide.description nofilter}</p>
						{/if}
						<a href="{$slide.url}" class="hero-button">{$slide.legend}</a>
					</div>
					<img class="rsABlock sliderimage" data-fade-effect="none"
						data-move-effect="bottom" data-opposite="true" data-move-offset="450"
						data-delay="350" data-speed="300" data-easing="easeOutBack"
						src="{$slide.image}" data-rsw="707" data-rsh="471" />
				{/if}
			</div>
		{/foreach}
	</div>
{/if}
